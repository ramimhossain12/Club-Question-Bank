<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feed"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".DeveloperFeedbackActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feed Back"
        android:textColor="#000000"
        android:fontFamily="@font/gotham"
        android:layout_marginTop="130dp"
        android:textSize="35sp"
        android:layout_gravity="center"/>
    <RatingBar
        android:id="@+id/rattingbarID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
       android:layout_marginTop="20dp"
        android:numStars="5"
        android:progressBackgroundTint="@android:color/black"
        android:progressTint="@color/colorPrimary"
        android:rating="2"
        android:stepSize="1" />

    <TextView
        android:id="@+id/ratingtextViewIDI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/nameEditTextID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:hint="Enter your name "
        android:textSize="17sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/massegeEditTextID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:hint="Enter your feedback "
        android:textSize="17sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">




        <Button
            android:id="@+id/clearButtonID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:layout_marginRight="20dp"
            android:background="@drawable/bcs_shape"
            android:backgroundTint="#F44336"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/sendButtonID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="send"
            android:background="@drawable/bcs_shape"
            android:backgroundTint="#4CAF50"
            android:textSize="20sp"
            >

        </Button>



    </LinearLayout>


</LinearLayout>