<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:orientation="vertical"
    tools:context=".StudentLoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:orientation="vertical">


        <EditText
            android:id="@+id/signInEmailEditTextID"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/btnshape"
            android:fontFamily="@font/calibri"
            android:gravity="center"
            android:drawableStart="@drawable/ic_email"
           android:padding="10dp"
            android:hint="Enter Your Email"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="#E9A031"
            android:textColorHint="#E9A031"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_email" />

        <EditText
            android:id="@+id/signInpasswordEditTextID"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:padding="10dp"
            android:background="@drawable/btnshape"
            android:fontFamily="@font/calibri"
            android:gravity="center"
            android:hint="Enter Your Password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColor="#E9A031"
            android:textColorHint="#E9A031"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_email" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Forgot Password?"
            android:textColor="#E9A031"
             android:layout_marginTop="10dp"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:gravity="bottom"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/textId1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginLeft="20dp"
            android:text="Sign Up !" />

        <Button
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:background="@drawable/logshap"
            android:layout_marginLeft="200dp"
            android:text="Login" />


    </LinearLayout>





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_gravity="center"
        android:orientation="horizontal">


      <ImageView
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginRight="10dp"
          android:src="@drawable/google"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
           android:layout_marginRight="10dp"
            android:src="@drawable/facebook"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/whatsapp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/twitter"/>

    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressbarID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />



</LinearLayout>